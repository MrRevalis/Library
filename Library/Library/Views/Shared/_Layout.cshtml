<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/mainScripts")
    <title>@ViewBag.Title</title>
</head>
    <body>
        <header>
            <h3>@Html.ActionLink("Library", "List", "Book")</h3>
            <div class="headerContainer">
                @Html.ActionLink("Login", "Login", "Login")
                @Html.ActionLink("Register", "Register", "Register")
            </div>
        </header>
        @if (TempData["RegisterMessage"] != null)
        {
            <div class="alertMessage" onclick="CloseAlert(this)">
                Success! <strong>You have registered successfully</strong>
            </div>
        }
        @RenderBody()
        <footer></footer>
    </body>
</html>