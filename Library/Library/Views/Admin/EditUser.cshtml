@model Library.ViewModels.AccountViewModel

@{
    ViewBag.Title = "Edit User";
}

<article style="width: 100%;">
    <h2>Edit User: @Model.UserName</h2>
    @using (Html.BeginForm("EditUser", "Admin", FormMethod.Post, new { @class = "formLeft" }))
    {
        <div class="formGroup">
            @Html.LabelFor(x => x.ID)
            <div class="formRows">
                @Html.EditorFor(x => x.ID, new { htmlAttributes = new { @readonly = "readonly", @class = "inputDisabled" } })
                @Html.ValidationMessageFor(x => x.ID, "")
            </div>
        </div>

        <div class="formGroup">
            @Html.LabelFor(x => x.UserName)
            <div class="formRows">
                @Html.EditorFor(x => x.UserName)
                @Html.ValidationMessageFor(x => x.UserName, "")
            </div>
        </div>

        <div class="formGroup">
            @Html.LabelFor(x => x.Email)
            <div class="formRows">
                @Html.EditorFor(x => x.Email)
                @Html.ValidationMessageFor(x => x.Email, "")
            </div>
        </div>

        @Html.ValidationSummary(true)
        <div class="submitSectionBlueRow">
            <input class="button" type="submit" value="Update" />
            <input class="button" type="button" value="Cancel" onclick="location.href='@Url.Action("Cancel", "Admin")'" />
        </div>
    }
</article>